
@model Category

<div class="card box-shadow border-0 mt-4">
	<div class="card-header bg-secondary bg-gradient mt-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="py-2">Create Category</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<form method="post" class=row>
			<input hidden asp-for="@Model.CategoryId" />
			<div class="border p-3">
				
				<div asp-validation-summary="All"></div>
				<div class="form-floating py-2 col-12">
					<input asp-for="Name" type="text" class="form-control border-0 shadow" />
					<label class="ms-2">Category Name</label>
					<span asp-validation-for="Name" , class="text-danger"></span>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="DisplayOrder" type="text" class="form-control border-0 shadow" />
					<label class="ms-2">Display Order</label>
					<span asp-validation-for="DisplayOrder" , class="text-danger"></span>
				</div>

				<div class="row pt-2">
					<div class="col-6 col-md-3">
						<button type="submit" class="btn btn-primary form-control" style="width:150px">submit</button>
					</div>
					<div class="col-6  col-md-3">
							
						<a asp-controller="Category" asp-action="Index" class="btn btn-warning form-control">Back To List</a>
					</div>
					
				</div>
				

			</div>
		</form>
	</div>
</div>



