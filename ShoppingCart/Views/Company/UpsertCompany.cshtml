@model Company

<div class="card box-shadow border-0 mt-4">
	<div class="card-header bg-secondary bg-gradient mt-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="py-2">Create Company</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<form method="post" class=row>
			<input hidden asp-for="@Model.CompanyId" />
			<div class="border p-3">

				<div asp-validation-summary="All"></div>
				<div class="form-floating py-2 col-12">
					<input asp-for="@Model.CompanyName" type="text" class="form-control border-0 shadow" />
					<label class="ms-2">CompanyName</label>
					<span asp-validation-for="@Model.CompanyName" , class="text-danger"></span>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="@Model.StreetAddress" type="text" class="form-control border-0 shadow" />
					<label class="ms-2">StreetAddress</label>
					<span asp-validation-for="@Model.StreetAddress" , class="text-danger"></span>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="@Model.City" type="text" class="form-control border-0 shadow" />
					<label class="ms-2">City</label>
					<span asp-validation-for="@Model.City" , class="text-danger"></span>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="@Model.State" type="text" class="form-control border-0 shadow" />
					<label class="ms-2">State</label>
					<span asp-validation-for="@Model.State" , class="text-danger"></span>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="@Model.Postal" type="text" class="form-control border-0 shadow" />
					<label class="ms-2">Postal</label>
					<span asp-validation-for="@Model.Postal" , class="text-danger"></span>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="@Model.PhoneNumber" type="text" class="form-control border-0 shadow" />
					<label class="ms-2">PhoneNumber</label>
					<span asp-validation-for="@Model.PhoneNumber" , class="text-danger"></span>
				</div>

				<div class="row pt-2">
					<div class="col-6 col-md-3">
						<button type="submit" class="btn btn-primary form-control" style="width:150px">submit</button>
					</div>
					<div class="col-6  col-md-3">

						<a asp-controller="Company" asp-action="Index" class="btn btn-warning form-control">Back To List</a>
					</div>

				</div>


			</div>
		</form>
	</div>
</div>



