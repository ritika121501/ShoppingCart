@model List<Product>
<div class="container">
	<div class="row">
		<div class="col-6">
			<h2>Product List</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="Product" asp-action="UpsertProduct"
			   class="btn btn-primary">
				<i class="bi bi-plus-circle-fill"></i>Create New Product
			</a>
		</div>
	</div>

</div>
<table id="myTable" class="table table-bordered table-striped" style="width:100%">
	<thead>
		<tr>
			<th>Title</th>
			<th>ISBN</th>
			<th>Author</th>
			<th>ListPrice</th>
			<th>Category</th>
			<th></th>
		</tr>
	</thead>
</table>


@section Scripts{
	<script src="~/js/product.js" asp-append-version="true"></script>
}