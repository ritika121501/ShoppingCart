@using ShoppingCart.ViewModels;
@model ProductVM

<form method="post" enctype="multipart/form-data">
    <input hidden asp-for="Product.Id" />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Product</h2>
        </div>

        <div asp-validation-summary="All"></div>

        <div class="mb-3">
            <label class="text-primary">Product Name</label>
            <input asp-for="Product.Title" type="text" class="form-control" />
            <span asp-validation-for="Product.Title" class="text-danger"> </span>
        </div>
        <div class="mb-3">
            <label class="text-primary">Display Order</label>
            <input asp-for="Product.Description" type="text" class="form-control" />
            <span asp-validation-for="Product.Description" class="text-danger"> </span>
        </div>
        <div class="mb-3">
            <label class="text-primary">ISBN</label>
            <input asp-for="Product.ISBN" type="text" class="form-control" />
            <span asp-validation-for="Product.ISBN" class="text-danger"> </span>
        </div>
        <div class="mb-3">
            <label class="text-primary">Author</label>
            <input asp-for="Product.Author" type="text" class="form-control" />
            <span asp-validation-for="Product.Author" class="text-danger"> </span>
        </div>
        <div class="mb-3">
            <label class="text-primary">ListPrice</label>
            <input asp-for="Product.ListPrice" type="text" class="form-control" />
            <span asp-validation-for="Product.ListPrice" class="text-danger"> </span>
        </div>
        <div class="mb-3">
            <label class="text-primary">CategoryList</label>
            <select asp-for="Product.CategoryId" asp-items="@Model.CategoryList" class="form-control">
                <option> --select--</option>
            </select>
        </div>

        <div class="mb-3">
            <label class="text-primary">Upload Image</label>
            <input asp-for="Product.ImageUrl" type="file" class="form-control" />
            
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">submit</button>
        <a asp-controller="Product" asp-action="Index" class="btn btn-warning">
            Back to List
        </a>
    </div>
</form>
